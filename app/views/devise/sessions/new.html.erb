<div class="container mx-auto min-h-screen flex justify-center items-center">
    <div class="w-1/3">
    <div class = "w-full max-w-xs">
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-7">
      <h2 class="heading text-4xl font-bold pt-4 mb-6  justify-center item-center" >Log in</h2>
      <div class="mb-4">
       <%= f.label :email, class:"block text-black-600 text-sm font-bold mb-2" %>
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",placeholder:"Enter your email" %>
      </div>
      <div class="mb-6">
        <%= f.label :password, class:"block text-black-600 text-sm font-bold mb-2" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline", placeholder:"Enter your password"%>
    
      <% if devise_mapping.rememberable? %>
        <div class="mb-6">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="flex items-center justify-between" >
        <%= f.submit 'Log In', class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"%>
      </div>
      </div>
      
      <%= render "devise/shared/links" %>
      <%= link_to 'Home Page', root_path, class:"no-underline hover:underline text-blue-800 text-lg" %>
    </div>
      </div>
    </div>
    <% end %>
  
</div>


