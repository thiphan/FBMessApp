<h1>Log In Page</h1>

<% if logged_in? -%>Welcome, <%= current_user.name %><% end -%>

<%= form_with(scope: :session, url: login_path, local: true) do |form| %>
   
  
   
    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

  
    <div class="field">
      <%= form.label :password %>
      <%= form.text_field :password %>
    </div>
  
    <div class="actions">
      <%= form.submit "Log In"  %>
    </div>


  <% end %>

  <%= link_to "Home Page", root_path %>